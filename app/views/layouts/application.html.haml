!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %meta{:content => "アマゾン輸出の便利サイト。日本とアメリカのamazonの価格差を表示しています。#{@description}", :name => "description"}
    %meta{:content => "amazon,輸出,せどり,副業,#{@keyword}", :name => "keywords"}
    %meta{:content => "", :name => "author"}

    %title= "アマゾン輸出のための#{@keyword}日米販売価格比較"
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    / Navigation
    %nav.navbar{:role => "navigation"}
      .container
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %div.navbar-brand{data:{no_turbolink: true}}= link_to "a.crudoe.com", root_path
          / Collect the nav links, forms, and other content for toggling
        .float-right#bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %strong
                %small
                  日米アマゾンの
                  - if @keyword
                    = link_to @keyword, "#{products_path}?keyword=#{@keyword}"
                  販売価格比較
        / /.navbar-collapse
    / Page Content
    .container
      = yield

      .row
        .col-lg-12
          .ad
            %script{:async => "", :src => "//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"}
              / a.crudoe.com
            %ins.adsbygoogle{"data-ad-client" => "ca-pub-9916693973832627", "data-ad-format" => "auto", "data-ad-slot" => "5444341538", :style => "display:block"}
            :javascript
              (adsbygoogle = window.adsbygoogle || []).push({});

    / /.container

    / Footer
    %footer
      .row.text-center
        .col-lg-12
          %p{data:{no_turbolink: true}}= link_to "Copyright © a.crudoe.com #{Date.today.year}", root_path
        / /.col-lg-12
      / /.row


    = javascript_include_tag "application", "data-turbolinks-track" => true

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-17879447-11', 'auto');
      ga('send', 'pageview');
