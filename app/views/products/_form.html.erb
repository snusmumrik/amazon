<%= form_for(@product, :url => {:action => :search}) do |f| %>
  <div class="field">
    <%= label_tag :search %><br>
    <%= text_field_tag :search, "Japan Import", :class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Search", :class => "btn btn-default" %>
  </div>
<% end %>

