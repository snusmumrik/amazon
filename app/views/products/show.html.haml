%table.table.table-bordered
  %tr
    %th
      %strong Asin
    %td
      = @product.asin
      [
      = link_to "US", @product.url
      |
      = link_to "JP", @product.url_jp
      ]
  %tr
    %th
      %strong Category
    %td= @product.category
  %tr
    %th
      %strong Manufacturer
    %td= @product.manufacturer
  %tr
    %th
      %strong Model
    %td= @product.model
  %tr
    %th
      %strong Title
    %td= @product.title
  %tr
    %th
      %strong Color
    %td= @product.color
  %tr
    %th
      %strong Size
    %td= @product.size
  %tr
    %th
      %strong Weight
    %td= @product.weight
  %tr
    %th
      %strong Features
    %td= @product.features
  %tr
    %th
      %strong Sales rank
    %td= number_with_delimiter @product.sales_rank
  %tr
    %th
      %strong Images
    %td
      = link_to image_tag(@product.image_url1.sub(/.jpg$/, "._SL160_.jpg")), @product.image_url1, "data-lightbox" => @product.image_url1 rescue nil
      = link_to image_tag(@product.image_url2.sub(/.jpg$/, "._SL160_.jpg")), @product.image_url2, "data-lightbox" => @product.image_url2 rescue nil
      = link_to image_tag(@product.image_url3.sub(/.jpg$/, "._SL160_.jpg")), @product.image_url3, "data-lightbox" => @product.image_url3 rescue nil
      = link_to image_tag(@product.image_url4.sub(/.jpg$/, "._SL160_.jpg")), @product.image_url4, "data-lightbox" => @product.image_url4 rescue nil
      = link_to image_tag(@product.image_url5.sub(/.jpg$/, "._SL160_.jpg")), @product.image_url5, "data-lightbox" => @product.image_url5 rescue nil
  %tr
    %th
      %strong Price
    %td
      - if @product.price
        - case @product.currency
        - when "USD"
          = link_to number_to_currency(@product.price, :locale => :en), @product.url
  %tr
    %th
      %strong Cost
    %td= link_to number_to_currency(@product.cost), @product.url_jp if @product.cost
  %tr
    %th
      %strong Shipping cost
    %td= number_to_currency @product.shipping_cost
  %tr
    %th
      %strong Profit
    %td
      - if @product.profit && @product.cost
        %p
          [amazon]
          %br
          - if @product.profit/@product.cost.to_f > 0.1
            %span.green
              = number_to_currency @product.profit
              %br
              = "(#{(100*@product.profit/@product.cost).round(0)}%)"
          - elsif @product.profit < 0
            %span.red
              = number_to_currency @product.profit
          - else
            = number_to_currency @product.profit
            %br
            = "(#{(100*@product.profit/@product.cost).round(0)}%)"
      - unless @sold_items.blank?
        %p
          [ebay]
          %br
          - if @product.cost
            - if (@average*@exchange_rate - @product.cost)/@product.cost.to_f > 0.1
              %span.green
                = number_to_currency @average*@exchange_rate - @product.cost
                %br
                = "(#{(100*(@average*@exchange_rate - @product.cost)/@product.cost).round(0)}%)"
            - elsif @average*@exchange_rate - @product.cost < 0
              %span.red
                = number_to_currency @average*@exchange_rate - @product.cost
            - else
              = number_to_currency @average*@exchange_rate - @product.cost
              %br
              = "(#{(100*(@average*@exchange_rate - @product.cost)/@product.cost).round(0)}%)"
  %tr
    %th
      %p
        %strong Ebay Items
      .left
        = t("views.product.all_count")
        = @ebay_items.count
        %br
        = t("views.product.sold_count")
        = number_with_delimiter @sold_items.count
        - if @average
          %br
          = t("views.product.average")
          = "#{@locale} #{number_with_delimiter @average}"
    %td
      %ul
        - @ebay_items.each do |item|
          %li
            = link_to item.title, ebay_item_path(item)
            - if item.selling_state == "EndedWithSales"
              %b.green= item.selling_state
            - elsif item.selling_state == "EndedWithoutSales"
              %span.red= item.selling_state
            = link_to "(#{item.current_price_currency_id} #{item.current_price_value}@#{item.end_time.strftime('%Y/%m/%d')})", item.view_item_url
      %p.right= link_to "More on Advanced Search at ebay.com", "http://www.ebay.com/sch/i.html?_nkw=#{URI.escape(@product.title)}"
= link_to 'Edit', edit_product_path(@product), :class => "btn btn-default"
= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"
= link_to 'Back', session[:previous_page], :class => "btn btn-default"
