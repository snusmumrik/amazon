= form_for @product_to_sell do |f|
  - if @product_to_sell.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product_to_sell.errors.count, "error")} prohibited this product_to_sell from being saved:"
      %ul
        - @product_to_sell.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :product
    = @product_to_sell.product.title
  .field
    = f.label :categpry_id
    = f.text_field :category_id
  .field
    = f.label :start_price
    = text_field_tag :start_price, @average
  .field
    = f.label :listed
    = f.check_box :listed
    .actions
    = f.submit 'Save', :class => "btn btn-default"
